# Resources:
# - https://github.com/jessfraz/dotfiles/blob/master/.gitconfig

[alias]
	alias=!git config -l | grep ^alias | cut -c 7- | sort
    c = clone --recursive
    ca = !git add -A && git commit -av
    cam = !git add -A && git commit -av -m
    # Remove branches that have already been merged with master
	# a.k.a. ‘delete merged’
	dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d; git remote -v update -p"
    go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"
    l = log --pretty=oneline -n 20 --graph --abbrev-commit
   	lg = log --color --decorate --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an (%G?)>%Creset' --abbrev-commit
    s = status -s
    p = "!git pull; git submodule foreach git pull origin main"
    up = "!git push -u origin HEAD"
    # Show verbose output about tags, branches or remotes
	#
	#[user]
	#username =
	tags = tag -l
	branches = branch -a
	remotes = remote -v

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[commit]
	gpgsign = true

[core]
	editor = vim

[help]
	autocorrect = 1

[init]
  defaultBranch = main

[merge]
	log = true

[pull]
    rebase = true

[push]
	default = simple
	autoSetupRemote = true

[remote "origin"]
	fetch = +refs/pull/*/head:refs/remotes/origin/pull/*

# Include provider-specific configurations
[include]
	path = ~/repos/personal/git/providers/github.gitconfig
	path = ~/repos/personal/git/providers/gitlab.gitconfig

# Directory-based conditional includes with provider-specific identities
# Personal projects (GitHub only)
[includeIf "gitdir:~/repos/personal/**"]
  path = ~/repos/personal/git/identities/personal-github.gitconfig

# Work projects - separate by provider
[includeIf "gitdir:~/repos/work/github/**"]
  path = ~/repos/personal/git/identities/work-github.gitconfig

[includeIf "gitdir:~/repos/work/gitlab/**"]
  path = ~/repos/personal/git/identities/work-gitlab.gitconfig

# URL-based matching for work projects outside standard directories
[includeIf "hasconfig:remote.*.url:git@gitlab.com:**"]
  path = ~/repos/personal/git/identities/work-gitlab.gitconfig
